// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Removed User, Account, Session, VerificationToken models

model Generation {
  id        String   @id @default(cuid())
  userId    String   // Just a string, no relation
  prompt    String
  output    String   // Store text output or URL for image
  type      String   // 'TEXT', 'IMAGE', etc.
  model     String
  cost      Int
  createdAt DateTime @default(now())
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String   // Just a string, no relation
  amount    Int
  type      String   // 'PURCHASE', 'USAGE', 'BONUS'
  reference String?  // Stripe ID or Generation ID
  createdAt DateTime @default(now())
}
